<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titletoolbar"
        android:paddingTop="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboardtext"
            android:text="Dashboard"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
        
        />
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_marginLeft="155dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/saitama"/>
        </androidx.cardview.widget.CardView>
    </Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titletoolbar"
        android:layout_marginTop="25dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cv1"
        android:backgroundTint="@color/backgroundcardview">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/monthname"
            />
            <TextView
                android:paddingLeft="15dp"
                app:layout_constraintTop_toBottomOf="@id/monthname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/currencysymbol"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/monthname"
                app:layout_constraintStart_toEndOf="@+id/currencysymbol"
                android:text="500"
                android:textColor="@color/white"
                android:id="@+id/amountView"/>
            <ProgressBar
                android:paddingLeft="15dp"
                android:layout_width="270dp"
                android:id="@+id/progressbar"
                android:theme="@style/WhiteAccent"
                android:layout_height="wrap_content"
                android:progress="70"
                app:layout_constraintTop_toBottomOf="@id/amountView"
                style="?android:attr/progressBarStyleHorizontal"
                />
            <TextView
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/progressbar"
                android:text="Daily spend target: $16.67"
                android:textColor="@color/white"
                
            />

            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:paddingTop="40dp"
                android:id ="@+id/graph"
                app:layout_constraintStart_toEndOf="@+id/progressbar"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_bar_chart_24"
            />
            <TextView
                android:layout_marginLeft="18dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                app:layout_constraintStart_toEndOf="@+id/progressbar"
                app:layout_constraintTop_toBottomOf="@id/graph"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        android:id="@+id/dailyspends"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Daily spends"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="30dp"
            android:textColor="#2c62ff"
            android:textStyle="bold"
            android:id="@+id/seeall"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:text="See All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_margin="18dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardviewdailyspend"
        app:layout_constraintTop_toBottomOf="@id/dailyspends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/cv3"
            app:layout_constraintTop_toBottomOf="@id/dailyspends"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/cardimage"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageWhishlist"
                    android:contentDescription="@null"
                    android:src="@drawable/bitcoin"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardimage2"
                app:layout_constraintTop_toBottomOf="@id/cardimage"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageWhishlist"
                    android:contentDescription="@null"
                    android:src="@drawable/food"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardimage3"
                app:layout_constraintTop_toBottomOf="@id/cardimage2"
                android:padding="10dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageWhishlist"
                    android:contentDescription="@null"
                    android:src="@drawable/clothes"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:id="@+id/verticallayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Banking"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$365.89"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food And Drinks"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$165.99"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clothes"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$65.09"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="235dp"
                app:layout_constraintEnd_toStartOf="@+id/verticallayout"
                app:layout_constraintStart_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"/>
                <TextView
                    android:layout_marginTop="55dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 Jan,2019"/>
                <TextView
                    android:layout_marginTop="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Jan,2019"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewdailyspend"
        android:id="@+id/wishlistlayout"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="WISHLIST"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="30dp"
            android:textColor="#2c62ff"
            android:textStyle="bold"
            android:id="@+id/seeallWISHLIST"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:text="See All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <HorizontalScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:id="@+id/horizontalscrollview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wishlistlayout"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage0"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2c62ff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/clothes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Tee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage1"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2bc999"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_dumbell"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Gym"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage2"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#fbb41a"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:id="@+id/Bikelayout"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bike"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Bike"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage3"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#ff5e5b"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/bitcoin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Saving"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage4"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#34afff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_sports"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Training"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage5"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2c62ff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="0dp"
        android:background="@drawable/shape_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minWidth="35px"
        android:minHeight="35px">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/navigation"
            app:itemIconTint="@drawable/icon_selector"/>

    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingActionButtonAdd"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabCradleRoundedCornerRadius="2dp"
        app:layout_anchor="@+id/bottomAppBar"
        android:layout_marginBottom="45dp"
            />







</androidx.constraintlayout.widget.ConstraintLayout>
